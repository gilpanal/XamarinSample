<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AppXamarin.HomePage"
      xmlns:vm="clr-namespace:AppXamarin;" 
    Title="{Binding Title}">
	<ContentPage.BindingContext>
        <vm:HomeViewModel />
    </ContentPage.BindingContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackLayout BackgroundColor="{StaticResource Accent}" VerticalOptions="FillAndExpand" HorizontalOptions="Fill">
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center">
                <ContentView Padding="0,40,0,40" VerticalOptions="FillAndExpand">
                    <Image Source="xamarin_logo.png" VerticalOptions="Center" HeightRequest="64" />
                </ContentView>
            </StackLayout>
        </StackLayout>
        <ScrollView Grid.Row="1">
            <StackLayout Orientation="Vertical" Padding="16,40,16,40" Spacing="10">
                <Button Margin="0,10,0,0" Text="Coches" BackgroundColor="{StaticResource Primary}" TextColor="White" Clicked="Handle_Clicked" />
                <Button Margin="0,10,0,0" Text="ElectrÃ³nica" BackgroundColor="{StaticResource Primary}" TextColor="White"  Clicked="Handle_Clicked" />
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
